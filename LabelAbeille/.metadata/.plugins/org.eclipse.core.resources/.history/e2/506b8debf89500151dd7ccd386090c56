infobulle=null;
function creer_carte(element, position, zoom) {
  map = new google.maps.Map(element, {
        zoom: zoom,
        center: new google.maps.LatLng(position),
        mapTypeId: google.maps.MapTypeId.ROADMAP
      });   
};
function creer_pointeur(position) {
	var marker = new google.maps.Marker({
		  position: new google.maps.LatLng(position), 
		  map: map,
		  icon : {url: '', size:''},
		  
		}); 
	google.maps.event.addListener(marker, 'click', function(data){
	    // affichage position du marker
	    infobulle.setContent(contenu(marker));
	    infobulle.open( marker.getMap(), marker);
	  }); 
};
function creer_infobulle(marqueur) {
	infobulle = new google.maps.InfoWindow({
	    'position' : new google.maps.LatLng(marqueur.position),           // position d'ancrage de l'InfoWondow sur la carte
	    'content'  : contenu(marqueur) // contenu qui sera affich√©
	  });
};
